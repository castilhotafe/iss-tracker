<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhereISSit.StalkingPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="12,8,12,16"
                             Spacing="18">

            <!-- HEADER + EXPANDER -->
            <VerticalStackLayout Spacing="10">

                <!-- HEADER -->
                <Grid ColumnDefinitions="*,Auto"
                      VerticalOptions="Center"
                      Padding="0,5">
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="Stalking"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource PrimaryDarkText}"
                               HorizontalOptions="Start"/>
                        <Label Text="Where ISS It?"
                               FontSize="12"
                               TextColor="{StaticResource Gray600}"
                               HorizontalOptions="Start"/>
                    </VerticalStackLayout>

                    <Frame Grid.Column="1"
                           CornerRadius="20"
                           Padding="0"
                           HorizontalOptions="End"
                           VerticalOptions="Center">
                        <Image Source="iss_icon.png"
                               HeightRequest="50"
                               WidthRequest="50"
                               Aspect="AspectFill"/>
                    </Frame>
                </Grid>

                <BoxView HeightRequest="1"
                         Color="{StaticResource Gray300}"
                         Margin="0,4"/>

                <!-- NEXT SIGHTINGS -->
                <toolkit:Expander>
                    <toolkit:Expander.Header>
                        <Grid ColumnDefinitions="Auto,*"
                              VerticalOptions="Center">
                            <Label Text="Next Sightings"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource PrimaryDarkText}"
                                   Grid.Column="0"/>
                            <Label x:Name="LocationStatusLabel"
                                   Text="Getting location..."
                                   FontSize="14"
                                   TextColor="{StaticResource Gray600}"
                                   HorizontalOptions="End"
                                   Grid.Column="1"/>
                        </Grid>
                    </toolkit:Expander.Header>

                    <VerticalStackLayout Spacing="8"
                                         Margin="0,8,0,0">
                        <Frame CornerRadius="19"
                               Padding="7"
                               BorderColor="{StaticResource Gray300}">
                            <VerticalStackLayout Spacing="6">
                                <BoxView HeightRequest="10"
                                         WidthRequest="180"
                                         Color="{StaticResource Gray300}"/>
                                <BoxView HeightRequest="8"
                                         WidthRequest="240"
                                         Color="{StaticResource Gray300}"/>
                            </VerticalStackLayout>
                        </Frame>
                        <Frame CornerRadius="19"
                               Padding="7"
                               BorderColor="{StaticResource Gray300}">
                            <VerticalStackLayout Spacing="6">
                                <BoxView HeightRequest="10"
                                         WidthRequest="160"
                                         Color="{StaticResource Gray300}"/>
                                <BoxView HeightRequest="8"
                                         WidthRequest="220"
                                         Color="{StaticResource Gray300}"/>
                            </VerticalStackLayout>
                        </Frame>
                    </VerticalStackLayout>
                </toolkit:Expander>

                <BoxView HeightRequest="2"
                         Color="{StaticResource Gray300}"
                         Margin="0,4,0,0"/>
            </VerticalStackLayout>

            <!-- MAPA -->
            <maps:Map x:Name="IssMap"
                      HeightRequest="395"
                      MapType="Street"
                      IsShowingUser="True"
                      Margin="0,0,0,0"
                      BackgroundColor="{StaticResource Gray100}"/>

            <!-- INFOS SECTION -->
            <VerticalStackLayout Padding="2,0,2,0"
                                 Spacing="0">
                <Frame CornerRadius="20"
                       Padding="12"
                       BorderColor="{StaticResource Gray300}"
                       HasShadow="True"
                       Margin="0,10,0,10">

                    <Grid RowDefinitions="Auto,Auto,Auto,Auto"
                          RowSpacing="10">

                        <!-- Linha 1: Latitude / Longitude / Distance -->
                        <Grid Grid.Row="0"
                              ColumnDefinitions="*,*,*"
                              ColumnSpacing="12">
                            <VerticalStackLayout Grid.Column="0"
                                                 Spacing="3">
                                <Label Text="Latitude"
                                       FontSize="16"
                                       TextColor="{StaticResource Gray600}"/>
                                <Label x:Name="LatitudeLabel"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource PrimaryDarkText}"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1"
                                                 Spacing="3">
                                <Label Text="Longitude"
                                       FontSize="16"
                                       TextColor="{StaticResource Gray600}"/>
                                <Label x:Name="LongitudeLabel"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource PrimaryDarkText}"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="2"
                                                 Spacing="3">
                                <Label Text="Distance"
                                       FontSize="16"
                                       TextColor="{StaticResource Gray600}"/>
                                <Label x:Name="DistanceLabel"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource PrimaryDarkText}"/>
                            </VerticalStackLayout>
                        </Grid>

                        <!-- Linha divisória -->
                        <BoxView Grid.Row="1"
                                 HeightRequest="1"
                                 Color="{StaticResource Gray300}"
                                 Opacity="0.8"
                                 Margin="0,4"/>

                        <!-- Linha 2: Speed -->
                        <Grid Grid.Row="2"
                              ColumnDefinitions="Auto,*"
                              ColumnSpacing="12"
                              VerticalOptions="Center">
                            <Label Text="Speed"
                                   FontSize="15"
                                   TextColor="{StaticResource Gray600}"
                                   VerticalOptions="Center"/>
                            <Label x:Name="SpeedLabel"
                                   Grid.Column="1"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   HorizontalOptions="End"
                                   TextColor="{StaticResource PrimaryDarkText}"/>
                        </Grid>

                        <!-- Linha 3: Altitude -->
                        <Grid Grid.Row="3"
                              ColumnDefinitions="Auto,*"
                              ColumnSpacing="12"
                              Margin="0,4,0,0"
                              VerticalOptions="Center">
                            <Label Text="Altitude"
                                   FontSize="15"
                                   TextColor="{StaticResource Gray600}"
                                   VerticalOptions="Center"/>
                            <Label x:Name="AltitudeLabel"
                                   Grid.Column="1"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   HorizontalOptions="End"
                                   TextColor="{StaticResource PrimaryDarkText}"/>
                        </Grid>
                    </Grid>
                </Frame>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>