             xmlns:styles="clr-namespace:WhereISSit.Resources.Styles"
             x:Class="WhereISSit.App">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- Your original colors (do not touch this file) -->
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />

                <!-- Default theme when the app starts (light) -->
                <styles:LightThemeDictionary />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>