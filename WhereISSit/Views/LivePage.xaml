<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhereISSit.Views.LivePage"
             BackgroundColor="{DynamicResource AppPageBackgroundColor}">

    <Grid RowDefinitions="Auto, *, Auto"
          Padding="20">

        
        <Label Text="ISS Live Stream"
               Grid.Row="0"
               FontSize="24"
               HorizontalOptions="Center"
               Margin="0,0,0,10"
               TextColor="{DynamicResource AppHeaderTextColor}" />

        
        <WebView x:Name="LiveVideoWebView"
                 Grid.Row="1"
                 HorizontalOptions="Fill"
                 VerticalOptions="Fill"
                 Source="https://www.sen.com/live" />

        
        <Label x:Name="NoConnectionLabel"
               Grid.Row="2"
               Text="No internet connection."
               HorizontalOptions="Center"
               TextColor="Red"
               IsVisible="False"
               Margin="0,10,0,0" />

    </Grid>

</ContentPage>