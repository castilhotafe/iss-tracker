<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhereISSit.Views.LivePage"
             Title="Live"
             BackgroundColor="{DynamicResource AppPageBackgroundColor}">

    
    <Grid RowDefinitions="Auto, *" Padding="20">

        
        <Label Text="ISS Live Stream"
               Grid.Row="0"
               FontSize="24"
               HorizontalOptions="Center"
               Margin="0,0,0,10"
               TextColor="{DynamicResource AppHeaderTextColor}" />

        
        <Grid Grid.Row="1">
            <WebView x:Name="LiveVideoWebView"
                     HorizontalOptions="Fill"
                     VerticalOptions="Fill" />
        </Grid>

    </Grid>

</ContentPage>
