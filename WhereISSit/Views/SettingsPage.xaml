<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhereISSit.Views.SettingsPage"
             Title="Settings"
             BackgroundColor="{DynamicResource AppPageBackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="20">

            <!-- Tema -->
            <Label Text="App Theme"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="{DynamicResource AppHeaderTextColor}" />

            <Label Text="Choose how the app should look."
                   FontSize="16"
                   TextColor="{DynamicResource AppHeaderTextColor}" />

            <VerticalStackLayout Spacing="10">
                <RadioButton x:Name="LightRadio"
                             Content="Light"
                             TextColor="{DynamicResource ControlTextColor}"
                             CheckedChanged="OnThemeRadioCheckedChanged" />

                <RadioButton x:Name="DarkRadio"
                             Content="Dark"
                             TextColor="{DynamicResource ControlTextColor}"
                             CheckedChanged="OnThemeRadioCheckedChanged" />
            </VerticalStackLayout>


            <!-- Formato de horas -->
            <Label Text="Time Format"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="{DynamicResource AppHeaderTextColor}"
                   Margin="0,20,0,0"/>

            <VerticalStackLayout Spacing="10">

                <RadioButton x:Name="TimeFormat24"
                             Content="24-hour format"
                             TextColor="{DynamicResource ControlTextColor}"
                             CheckedChanged="OnTimeFormatCheckedChanged"/>

                <RadioButton x:Name="TimeFormat12"
                             Content="12-hour format"
                             TextColor="{DynamicResource ControlTextColor}"
                             CheckedChanged="OnTimeFormatCheckedChanged"/>

            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>