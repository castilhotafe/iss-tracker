<Shell
    x:Class="WhereISSit.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:WhereISSit.Views">

    <TabBar>
        <Tab Title="Stalking">
            <ShellContent ContentTemplate="{DataTemplate views:StalkingPage}" />
        </Tab>

        <Tab Title="Live">
            <ShellContent ContentTemplate="{DataTemplate views:LivePage}" />
        </Tab>

        <Tab Title="About">
            <ShellContent ContentTemplate="{DataTemplate views:AboutPage}" />
        </Tab>
    </TabBar>

</Shell>