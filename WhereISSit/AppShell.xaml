<Shell
    x:Class="WhereISSit.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:WhereISSit.Views"
    BackgroundColor="{DynamicResource AppHeaderBackgroundColor}"
    ForegroundColor="{DynamicResource AppHeaderTextColor}"
    Shell.TabBarBackgroundColor="{DynamicResource AppHeaderBackgroundColor}"
    Shell.TabBarTitleColor="{DynamicResource AppHeaderTextColor}">

    <TabBar>
        <Tab Title="Stalking">
            <ShellContent ContentTemplate="{DataTemplate views:StalkingPage}" />
        </Tab>

        <Tab Title="Live">
            <ShellContent ContentTemplate="{DataTemplate views:LivePage}" />
        </Tab>

        <Tab Title="About">
            <ShellContent ContentTemplate="{DataTemplate views:AboutPage}" />
        </Tab>

        <Tab Title="Settings">
            <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" />
        </Tab>
    </TabBar>

</Shell>